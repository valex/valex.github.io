doctype html
<html lang="en">
<head>
    <meta charset=UTF-8>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <meta name="description" content="#{pages[index]['meta_description']}">
    <meta name="keywords" content="#{pages[index]['meta_keywords']}">

    if pages[index]['alternates']
        if pages[index]['alternates']['de']
            <link rel="alternate" hreflang="de" href="https://valex.github.io/de/#{pages[index]['slug']}.html" />

    <title>#{pages[index]['meta_title']}</title>

    //- https://discourse.threejs.org/t/solved-importmaps-broken-on-firefox-which-now-supports-importmaps/48413/5
    block importmaps

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">

    <script>
    | MathJax = {
    |    tex: {
    |        inlineMath: [['$', '$'], ['\\(', '\\)']]
    |    },
    |    svg: {
    |        fontCache: 'global'
    |    }
    |};
    </script>
    <script type="text/javascript" id="MathJax-script" async src="https://cdn.jsdelivr.net/npm/mathjax@3/es5/tex-chtml.js"></script>

    <script defer src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa" crossorigin="anonymous"></script>
  
    <script defer src="https://cdnjs.cloudflare.com/ajax/libs/d3/7.6.1/d3.min.js"></script>

    block scripts

    script(defer=pages[index]['script_module'] ? false : true, type=pages[index]['script_module'] ? 'module' : 'application/javascript', src=`./resources/js/${pages[index]['slug']}.js`)

    <script defer src="./resources/js/donate.js"></script>
    
    <link rel="stylesheet" href="./resources/css/basic.css" >
    <link rel="stylesheet" href="./resources/css/#{pages[index]['slug']}.css" >

    <script src="https://cdn.counter.dev/script.js" data-id="b0775af1-0d2d-4956-bf6a-2894dc0d0d57" data-utcoffset="3"></script>
</head>

<body>
    <div class="container-fluid">
        <section class="text-center">
            <h1 class="h4 d-flex justify-content-center align-items-center">#{pages[index]['title']}</h1>
        </section>

        block content
    </div> <!--end .container-fluid -->

    include footer.pug

</body>
</html>